{
  "name": "@wingman/extension",
  "version": "1.0.4",
  "description": "Wingman Chrome Extension - Lightweight UX feedback assistant for web applications",
  "author": "Wingman Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wingman/wingman.git",
    "directory": "packages/extension"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "WINGMAN_ENV=production wxt build",
    "build:dev": "WINGMAN_ENV=development wxt build",
    "build:staging": "WINGMAN_ENV=staging wxt build",
    "build:prod": "WINGMAN_ENV=production wxt build",
    "dev": "WINGMAN_ENV=development wxt",
    "dev:chrome": "WINGMAN_ENV=development wxt --open-console",
    "zip": "WINGMAN_ENV=production wxt zip",
    "zip:dev": "WINGMAN_ENV=development wxt zip",
    "zip:staging": "WINGMAN_ENV=staging wxt zip",
    "create-crx": "node scripts/create-crx.js",
    "create-crx:dev": "WINGMAN_ENV=development node scripts/create-crx.js",
    "create-crx:prod": "WINGMAN_ENV=production node scripts/create-crx.js",
    "dev:icons": "node scripts/create-dev-icons.js",
    "dev:chrome:personal": "node scripts/dev-chrome-personal.js --build-first",
    "dev:chrome:watch": "node scripts/dev-chrome-personal.js --build-first --watch",
    "dev:chrome:fresh": "node scripts/dev-chrome-personal.js --build-first --fresh-profile",
    "dev:playwright:setup": "node scripts/setup-playwright-mcp.js",
    "dev:playwright:config": "node scripts/setup-playwright-mcp.js --config-only",
    "dev:playwright:test": "npx playwright test",
    "dev:playwright:test:ui": "npx playwright test --ui",
    "clean": "rm -rf .output dist",
    "clean:all": "rm -rf .output dist/development dist/staging dist/production",
    "package": "node scripts/package-extension.js",
    "build:package": "npm run build && npm run package",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:playwright": "npx playwright test",
    "test:playwright:headed": "npx playwright test --headed"
  },
  "dependencies": {
    "@emotion/react": "^11.13.5",
    "@emotion/styled": "^11.13.5",
    "@mui/icons-material": "^6.1.8",
    "@mui/material": "^6.1.8",
    "@types/qrcode": "^1.5.5",
    "@wingman/shared": "*",
    "@wxt-dev/module-react": "^1.1.5",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-simple-wysiwyg": "^3.4.0",
    "ulid": "^3.0.1",
    "wxt": "^0.20.11",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.288",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^5.0.0",
    "canvas": "^3.2.0",
    "crx": "^5.0.1",
    "hot-reload-extension-vite": "^1.0.13",
    "jsdom": "^26.0.0",
    "terser": "^5.43.1",
    "typescript": "^5.7.3",
    "vite": "^5.4.14",
    "vitest": "^2.1.8"
  }
}
