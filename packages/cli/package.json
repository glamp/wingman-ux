{
  "name": "wingman-cli",
  "version": "1.0.0",
  "description": "CLI for Wingman - Lightweight UX feedback assistant with local relay server",
  "keywords": [
    "wingman",
    "ux",
    "feedback",
    "cli",
    "developer-tools"
  ],
  "author": "Wingman Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/glamp/wingman-attempt-4.git",
    "directory": "packages/cli"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "main": "dist/index.js",
  "bin": {
    "wingman": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "node esbuild.config.js",
    "build:tsc": "tsc && chmod +x dist/index.js",
    "dev": "tsx watch src/index.ts",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "coverage": "npm run test:coverage",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "canvas": "^3.2.0",
    "bufferutil": "^4.0.7",
    "utf-8-validate": "^6.0.3",
    "@roamhq/wrtc": "^0.9.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.7.0",
    "@types/node": "^22.12.0",
    "esbuild": "^0.25.9",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
