{
  "environment": "development",
  "environmentName": "Development",
  "relayUrl": "http://localhost:8787",
  "debug": true,
  "badge": {
    "text": "DEV",
    "color": "#0084ff"
  },
  "features": {
    "verboseLogging": true,
    "hotReload": true,
    "debugPanel": true
  },
  "ui": {
    "headerColor": "#0084ff",
    "environmentLabel": "DEV MODE",
    "showEnvironmentBanner": true
  },
  "dataCapture": {
    "console": {
      "maxEntries": 100,
      "templateLimit": 20,
      "description": "Most recent console logs to include in template output"
    },
    "network": {
      "maxEntries": 50,
      "templateLimit": 15,
      "description": "Most recent network requests to include in template output"
    },
    "errors": {
      "maxEntries": 100,
      "templateLimit": 10,
      "description": "Most recent errors to include in template output"
    }
  }
}