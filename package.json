{
  "name": "wingman",
  "version": "1.0.0",
  "private": true,
  "description": "Lightweight UX feedback assistant",
  "workspaces": [
    "packages/*",
    "demo-app"
  ],
  "scripts": {
    "dev": "./scripts/wingit --workspace=false",
    "dev:stop": "./scripts/wingit stop --workspace=false",
    "dev:status": "./scripts/wingit status --workspace=false",
    "dev:restart": "./scripts/wingit restart --workspace=false",
    "dev:logs": "./scripts/wingit logs --workspace=false",
    "dev:logs:server": "./scripts/wingit logs server --workspace=false",
    "dev:logs:extension": "./scripts/wingit logs extension --workspace=false",
    "dev:logs:preview": "./scripts/wingit logs preview --workspace=false",
    "dev:logs:demo": "./scripts/wingit logs demo --workspace=false",
    "dev:logs:clear": "./scripts/wingit logs --clear --workspace=false",
    "dev:logs:info": "./scripts/wingit logs --info --workspace=false",
    "dev:with-logs": "./scripts/wingit --logs --workspace=false",
    "start": "npm run dev",
    "start:direct": "concurrently -n \"server,extension,demo\" -c \"blue,green,yellow\" \"npm run start:server\" \"npm run start:extension\" \"npm run start:demo\"",
    "start:server": "cd packages/relay-server && npm run dev",
    "start:extension": "cd packages/chrome-extension && npm run dev",
    "start:demo": "cd demo-app && npm run dev",
    "build": "npm run build --workspaces --if-present",
    "build:all": "npm run build && cd packages/chrome-extension && npm run build",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest watch --coverage",
    "test:coverage:all": "npm run test:coverage --workspaces --if-present && node scripts/coverage-report.js",
    "coverage": "npm run test:coverage",
    "coverage:open": "open coverage/index.html",
    "prettier": "prettier --write .",
    "lint": "npm run lint --workspaces --if-present",
    "release:build": "./scripts/build-release.sh",
    "release:chrome": "./scripts/build-release.sh --chrome",
    "release:cli": "./scripts/build-release.sh --cli",
    "release:sdk": "./scripts/build-release.sh --sdk"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "chalk": "^5.6.0",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.0",
    "dayjs": "^1.11.13",
    "detect-port": "^2.1.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.4.2",
    "proper-lockfile": "^4.1.2",
    "supertest": "^7.1.4",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
