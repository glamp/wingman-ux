{
  "name": "wingman",
  "version": "1.0.0",
  "private": true,
  "description": "Lightweight UX feedback assistant",
  "workspaces": [
    "packages/*",
    "demo-app"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "prettier": "prettier --write .",
    "lint": "npm run lint --workspaces --if-present"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}