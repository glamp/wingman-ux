{
  "name": "wingman",
  "version": "1.0.0",
  "private": true,
  "description": "Lightweight UX feedback assistant",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "concurrently -n \"api,webapp,ext,react-app\" -c \"blue,cyan,green,yellow\" \"npm run dev:api\" \"npm run dev:webapp\" \"npm run dev:extension\" \"npm run dev:react-app\"",
    "dev:api": "cd packages/api && npm run dev",
    "dev:webapp": "cd packages/webapp && npm run dev",
    "dev:extension": "cd packages/extension && npm run dev",
    "dev:react-app": "cd examples/react-app && npm run dev",
    "dev:backend": "npm run dev:api",
    "dev:frontend": "concurrently -n \"webapp,ext\" -c \"cyan,green\" \"npm run dev:webapp\" \"npm run dev:extension\"",
    "build": "npm run build --workspaces --if-present",
    "build:extension": "cd packages/extension && npm run build",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest watch --coverage",
    "test:coverage:all": "npm run test:coverage --workspaces --if-present && node scripts/coverage-report.js",
    "coverage": "npm run test:coverage",
    "coverage:open": "open coverage/index.html",
    "clean": "npm run clean --workspaces --if-present",
    "prettier": "prettier --write .",
    "lint": "npm run lint --workspaces --if-present",
    "release:build": "./scripts/build-release.sh",
    "release:chrome": "./scripts/build-release.sh --chrome",
    "release:cli": "./scripts/build-release.sh --cli",
    "release:sdk": "./scripts/build-release.sh --sdk",
    "test:docker": "./test/integration/run-docker-test.sh",
    "test:npx": "docker build -t wingman-test test/integration && docker run --rm wingman-test"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "chalk": "^5.6.0",
    "concurrently": "^9.2.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.4.2",
    "supertest": "^7.1.4",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}