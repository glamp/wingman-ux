{
  "name": "wingman",
  "version": "1.0.0",
  "private": true,
  "description": "Lightweight UX feedback assistant",
  "workspaces": [
    "packages/*",
    "demo-app"
  ],
  "bin": {
    "wingman": "./packages/cli/dist/index.js"
  },
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "prettier": "prettier --write .",
    "lint": "npm run lint --workspaces --if-present"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.4.2",
    "supertest": "^7.1.4",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
