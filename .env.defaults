# Wingman Development Configuration Defaults
# Copy this file to .env to customize your local development environment

# API Server
API_PORT=8787
API_HOST=localhost

# Webapp
WEBAPP_PORT=3001
WEBAPP_HOST=localhost

# Demo App
DEMO_PORT=5173

# Chrome Extension Development
EXTENSION_HMR_PORT=9012

# Tunnel Configuration
TUNNEL_MODE=local
TUNNEL_BASE_URL=localhost:8787

# Development Mode
NODE_ENV=development

# Storage Path (relative to project root)
STORAGE_PATH=.wingman

# Session Configuration
SESSION_TTL=86400000  # 24 hours in milliseconds
SESSION_CLEANUP_INTERVAL=3600000  # 1 hour in milliseconds

# Share Configuration
SHARE_DEFAULT_EXPIRY=86400000  # 24 hours in milliseconds
SHARE_MAX_ACCESSES=100

# Development Features
HOT_RELOAD=true
DEBUG=false